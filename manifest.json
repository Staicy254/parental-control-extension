{
    "manifest_version": 3,
    "name": "Parental Control - Website Blocker",
    "version": "1.0",
    "description": "Blocks websites after a set time limit.",
    "permissions": ["storage", "tabs", "alarms"],
    "host_permissions": ["*://*.youtube.com/*", "*://*.instagram.com/*", "*://*.tiktok.com/*", "*://*.twitter.com/*"],
    "action": {
      "default_popup": "popup.html",
       "default_icon": "icon.png"

    },
    "background": {
      "service_worker": "background.js"
    }
  }
  